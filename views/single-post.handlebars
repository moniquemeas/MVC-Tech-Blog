<div class="card mt-5">
            <div class="card-body">
                <div class="post-title d-flex justify-content-between bg-dark text-white p-2">
                <h4>{{post.title}}</h4>
                <h4>Poste by {{post.user.username}} on {{format_date post.created_at}}</h4>
            </div>
                <p class="card-text">{{post.description}}</p>            
            </div>
            <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
</div>
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <input type="text" id="comment-input"/>
  </div>

  <div>
    <button class="bg-dark text-white" type="submit">Add comment</button>
    
  </div>
</form>
{{/if}}

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}